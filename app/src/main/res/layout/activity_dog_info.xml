<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.rayan.tingrr_1.DogInfo">

    <ImageView
        android:id="@+id/imgDog"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/a5"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/txtDogDes"
        android:layout_width="match_parent"
        android:lineSpacingMultiplier="1.3"
        android:textSize="15dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgDog"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Description Text Description Text Description Text Description Text Description Text Description Text Description Text Description Text Description Text Description Text Description Text Description Text Description Text Description Text Description Text "
        />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtDogDes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:textSize="15dp"
        android:text="Saved to Collection     " />

</RelativeLayout>
